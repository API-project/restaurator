<% if(restaurants.length > 0) { %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Nonmbre</th>
      <th>Dirección</th>
      <th>Valoración</th>
      <th>Borrar</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% restaurants.forEach((restaurant) => { %>
      <tr>
        <td>
          <img src="/restaurants/<%= restaurant._id %>/pic">
        </td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.direction %></td>
        <td><%= restaurant.rating %></td>


        <td>
          <form action="/restaurants/<%= restaurant._id %>/delete" method="post">
            <input type="submit" value="Delete" class="Delete">
          </form>
        </td>
      </tr>

    <% }) %>
  </tbody>
</table>
<% } else { %>
  <div class="alert alert-warning" role="alert">No restaurants!</div>
<% } %>
